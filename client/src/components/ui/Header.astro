---
import CartCounter from './CartCounter.jsx';
import CartFlyout from '../shop/CartFlyout.jsx';
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200">
  <div class="container mx-auto px-4 h-16 flex items-center justify-between">
    <a href="/" class="text-2xl font-bold text-primary flex items-center gap-2">
      <span class="bg-primary text-white p-1 rounded">GS</span>
      <span>GeekShop</span>
    </a>

    <nav class="hidden md:flex items-center gap-8 text-sm font-medium">
      <a href="/" class="hover:text-secondary transition-colors">Inicio</a>
      <a href="/?categoria=Camisetas" class="hover:text-secondary transition-colors">Camisetas</a>
      <a href="/?categoria=Accesorios" class="hover:text-secondary transition-colors">Accesorios</a>
    </nav>

    <div class="flex items-center gap-4">
      <CartCounter client:load />
    </div>
  </div>

  <CartFlyout client:load />
</header>
