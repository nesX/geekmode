---
import { ClientRouter } from 'astro:transitions';
import Header from '../components/ui/Header.astro';
import '../styles/global.css';

/**
 * @typedef {Object} Props
 * @property {string} title - Título de la página.
 * @property {string} [description] - Descripción para SEO.
 */

const { title, description = 'GeekShop - Estilo Geek para Desarrolladores' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | GeekShop</title>
    <meta name="description" content={description} />
    <ClientRouter />
  </head>
  <body class="bg-background text-text-main min-h-screen flex flex-col font-sans antialiased">
    <Header />
    <main class="flex-grow container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="bg-surface text-text-muted py-12 mt-auto border-t border-white/5">
      <div class="container mx-auto px-4 text-center">
        <p>&copy; {new Date().getFullYear()} GeekShop. Hecho con ❤️ para la comunidad dev.</p>
      </div>
    </footer>
  </body>
</html>
