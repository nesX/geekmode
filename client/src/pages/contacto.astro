---
import Layout from '../layouts/Layout.astro';
import { fetchSettings } from '../lib/api';
import { buildWhatsAppLink } from '../utils/buildWhatsAppLink';

let settings = {};
try {
  settings = await fetchSettings();
} catch {
  // fallback vacío
}

const phone = settings.contact_whatsapp || '';
const email = settings.contact_email || '';
const instagram = settings.contact_instagram || '';
const shippingTime = settings.shipping_time || '';
const freeShippingMsg = settings.free_shipping_message || '';

const formatPhone = (p) => {
  const digits = p.replace(/\D/g, '');
  if (digits.length === 12) {
    return `${digits.slice(2, 5)} ${digits.slice(5, 8)} ${digits.slice(8)}`;
  }
  return p;
};

const instagramHandle = instagram.replace('@', '');
const waLink = phone ? buildWhatsAppLink(phone, 'general') : '#';
---

<Layout title="Contacto" description="Contáctanos por WhatsApp, email o Instagram">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-3xl font-bold text-text-main mb-8">Contáctanos</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      {/* WhatsApp */}
      {phone && (
        <div class="bg-surface rounded-xl border border-white/10 p-6 flex flex-col items-center text-center">
          <div class="w-14 h-14 rounded-full bg-green-500/20 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-green-400" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </div>
          <h2 class="text-lg font-bold text-text-main mb-1">WhatsApp</h2>
          <p class="text-sm text-text-muted mb-3">Escríbenos por WhatsApp</p>
          <p class="text-text-main font-medium mb-4">{formatPhone(phone)}</p>
          <a
            href={waLink}
            target="_blank"
            rel="noopener noreferrer"
            class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2.5 px-4 rounded-lg transition-colors text-sm text-center"
          >
            Abrir WhatsApp
          </a>
        </div>
      )}

      {/* Email */}
      {email && (
        <div class="bg-surface rounded-xl border border-white/10 p-6 flex flex-col items-center text-center">
          <div class="w-14 h-14 rounded-full bg-primary/20 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="16" x="2" y="4" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
          </div>
          <h2 class="text-lg font-bold text-text-main mb-1">Email</h2>
          <p class="text-sm text-text-muted mb-3">Envíanos un correo</p>
          <a
            href={`mailto:${email}`}
            class="text-primary hover:underline font-medium break-all"
          >
            {email}
          </a>
        </div>
      )}

      {/* Instagram */}
      {instagram && (
        <div class="bg-surface rounded-xl border border-white/10 p-6 flex flex-col items-center text-center">
          <div class="w-14 h-14 rounded-full bg-pink-500/20 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-pink-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
            </svg>
          </div>
          <h2 class="text-lg font-bold text-text-main mb-1">Instagram</h2>
          <p class="text-sm text-text-muted mb-3">Síguenos en Instagram</p>
          <a
            href={`https://instagram.com/${instagramHandle}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-pink-400 hover:underline font-medium"
          >
            {instagram}
          </a>
        </div>
      )}
    </div>

    {/* Info adicional */}
    {(shippingTime || freeShippingMsg) && (
      <div class="bg-surface rounded-xl border border-white/10 p-6">
        <h2 class="text-lg font-bold text-text-main mb-4">Información de envíos</h2>
        <div class="space-y-3 text-text-muted">
          {shippingTime && (
            <p>
              <span class="text-text-main font-medium">Tiempo de envío:</span> {shippingTime}
            </p>
          )}
          {freeShippingMsg && <p>{freeShippingMsg}</p>}
        </div>
      </div>
    )}
  </div>
</Layout>
