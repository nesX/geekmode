---
import Layout from '../../layouts/Layout.astro';
import { fetchCategories } from '../../lib/api';
import { ArrowLeft } from 'lucide-react';

const categories = await fetchCategories();
---

<Layout title="Categorias">
  <div class="mb-8">
    <a href="/" class="inline-flex items-center gap-2 text-text-muted hover:text-primary transition-colors font-medium">
      <ArrowLeft className="w-4 h-4" />
      Volver a la tienda
    </a>
  </div>

  <div class="mb-8">
    <h1 class="text-3xl font-bold text-text-main">Nuestras <span class="text-primary">Categorias</span></h1>
    <p class="text-text-muted mt-2">Explora por categoria y encuentra lo que buscas.</p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {categories.map((cat) => (
      <a
        href={`/camisetas/${cat.slug}`}
        class="group bg-surface rounded-xl border border-white/10 p-8 hover:border-primary/50 transition-all duration-300 flex flex-col items-center text-center"
      >
        <div class="w-16 h-16 bg-primary/10 text-primary rounded-2xl flex items-center justify-center mb-6 text-2xl group-hover:scale-110 transition-transform shadow-[0_0_15px_rgba(139,92,246,0.1)]">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"/>
            <line x1="7" y1="7" x2="7.01" y2="7"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-text-main group-hover:text-primary transition-colors mb-2">{cat.name}</h2>
        {cat.description && (
          <p class="text-sm text-text-muted line-clamp-2">{cat.description}</p>
        )}
      </a>
    ))}
  </div>

  {categories.length === 0 && (
    <div class="text-center py-24 text-text-muted">
      <p>No hay categorias disponibles aun.</p>
    </div>
  )}
</Layout>
