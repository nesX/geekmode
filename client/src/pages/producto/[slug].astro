---
import Layout from '../../layouts/Layout.astro';
import AddToCartButton from '../../components/shop/AddToCartButton.jsx';
import SizeSelector from '../../components/shop/SizeSelector.jsx';
import RelatedProducts from '../../components/shop/RelatedProducts.astro';
import { fetchProducts, fetchProductBySlug, fetchRelatedProducts } from '../../lib/api';
import { formatPrice } from '../../utils/format';
import { getProductImageUrl } from '../../utils/imageUrl';
import { ArrowLeft, Share2, Heart } from 'lucide-react';

export async function getStaticPaths() {
  const products = await fetchProducts();
  return products.map((p) => ({
    params: { slug: p.slug },
  }));
}

const { slug } = Astro.params;
const raw = await fetchProductBySlug(slug);

// Extract unique sizes from variants
const sizes = [...new Set(raw.variants.map((v) => v.size))];

const productImages = raw.images && raw.images.length > 0
  ? raw.images
      .sort((a, b) => (b.is_primary ? 1 : 0) - (a.is_primary ? 1 : 0))
      .map(img => getProductImageUrl(img.filename, 'large'))
  : [getProductImageUrl(null, 'large')];

const product = {
  id: raw.id,
  slug: raw.slug,
  name: raw.name,
  price: Number(raw.base_price),
  description: raw.description,
  images: productImages,
  sizes,
  category: 'Geek',
};

let relatedProducts = [];
try {
  relatedProducts = await fetchRelatedProducts(raw.id);
} catch { /* non-critical */ }
---

<Layout title={product.name} description={product.description}>
  <div class="mb-8">
    <a href="/" class="inline-flex items-center gap-2 text-text-muted hover:text-primary transition-colors font-medium">
      <ArrowLeft className="w-4 h-4" />
      Volver a la tienda
    </a>
  </div>

  <div class="grid lg:grid-cols-2 gap-12">
    <!-- Gallery -->
    <div class="space-y-4">
      <div class="aspect-square bg-surface rounded-2xl border border-white/10 overflow-hidden relative">
        <div class="absolute inset-0 bg-gradient-to-t from-background/20 to-transparent pointer-events-none"></div>
        <img
          src={product.images[0]}
          alt={product.name}
          class="w-full h-full object-cover"
        />
      </div>
      <div class="grid grid-cols-4 gap-4">
        {product.images.map((img, idx) => (
          <div class={`aspect-square rounded-lg border-2 overflow-hidden cursor-pointer transition-all ${idx === 0 ? 'border-primary shadow-[0_0_10px_rgba(139,92,246,0.3)]' : 'border-white/5 opacity-50 hover:opacity-100'}`}>
            <img src={img} alt={`${product.name} thumbnail ${idx}`} class="w-full h-full object-cover" />
          </div>
        ))}
      </div>
    </div>

    <!-- Details -->
    <div class="flex flex-col">
      <div class="flex items-center justify-between mb-2">
        <span class="bg-primary/10 text-primary text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider border border-primary/20">
          {product.category}
        </span>
        <div class="flex items-center gap-4">
          <button class="text-text-muted hover:text-red-500 transition-colors">
            <Heart className="w-6 h-6" />
          </button>
          <button class="text-text-muted hover:text-primary transition-colors">
            <Share2 className="w-6 h-6" />
          </button>
        </div>
      </div>

      <h1 class="text-3xl md:text-4xl font-black text-text-main mb-4 leading-tight">
        {product.name}
      </h1>

      <p class="text-3xl font-bold text-secondary mb-6 flex items-center gap-2">
        {formatPrice(product.price)}
        <span class="text-sm font-normal text-text-muted line-through opacity-50">$ 75.000</span>
      </p>

      <div class="prose prose-invert mb-8">
        <p class="text-text-muted leading-relaxed">
          {product.description}
        </p>
      </div>

      <SizeSelector sizes={product.sizes} client:load />

      <div class="mt-auto pt-8 border-t border-white/10">
        <AddToCartButton product={product} client:load />

        <p class="text-[10px] text-center text-text-muted mt-4 uppercase tracking-widest font-bold">
          <span class="text-accent">üöö</span> Env√≠o gratis en pedidos superiores a $ 150.000
        </p>
      </div>

      <div class="mt-8 grid grid-cols-2 gap-4">
        <div class="bg-surface p-4 rounded-xl border border-white/5 group hover:border-primary/30 transition-colors">
          <p class="text-xs font-bold text-primary mb-1 uppercase tracking-tighter">Material</p>
          <p class="text-sm text-text-muted font-medium">100% Algod√≥n Peinado</p>
        </div>
        <div class="bg-surface p-4 rounded-xl border border-white/5 group hover:border-secondary/30 transition-colors">
          <p class="text-xs font-bold text-secondary mb-1 uppercase tracking-tighter">Impresi√≥n</p>
          <p class="text-sm text-text-muted font-medium">DTF de alta resoluci√≥n</p>
        </div>
      </div>
    </div>
  </div>

  <RelatedProducts products={relatedProducts} />
</Layout>

<script>
  import { setSelectedSize } from '../../lib/productStore';
  // Reset selected size when entering a product page
  setSelectedSize(null);
</script>
