---
import Layout from '../../layouts/Layout.astro';
import AddToCartButton from '../../components/shop/AddToCartButton.jsx';
import SizeSelector from '../../components/shop/SizeSelector.jsx';
import { products } from '../../data/products';
import { formatPrice } from '../../utils/format';
import { ArrowLeft, Share2, Heart } from 'lucide-react';

export async function getStaticPaths() {
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
---

<Layout title={product.name} description={product.description}>
  <div class="mb-8">
    <a href="/" class="inline-flex items-center gap-2 text-slate-500 hover:text-primary transition-colors font-medium">
      <ArrowLeft className="w-4 h-4" />
      Volver a la tienda
    </a>
  </div>

  <div class="grid lg:grid-cols-2 gap-12">
    <!-- Gallery -->
    <div class="space-y-4">
      <div class="aspect-square bg-white rounded-2xl border border-slate-200 overflow-hidden">
        <img
          src={product.images[0]}
          alt={product.name}
          class="w-full h-full object-cover"
        />
      </div>
      <div class="grid grid-cols-4 gap-4">
        {product.images.map((img, idx) => (
          <div class={`aspect-square rounded-lg border-2 overflow-hidden cursor-pointer ${idx === 0 ? 'border-secondary' : 'border-transparent'}`}>
            <img src={img} alt={`${product.name} thumbnail ${idx}`} class="w-full h-full object-cover" />
          </div>
        ))}
      </div>
    </div>

    <!-- Details -->
    <div class="flex flex-col">
      <div class="flex items-center justify-between mb-2">
        <span class="bg-blue-100 text-secondary text-xs font-bold px-3 py-1 rounded-full uppercase">
          {product.category}
        </span>
        <div class="flex items-center gap-4">
          <button class="text-slate-400 hover:text-red-500 transition-colors">
            <Heart className="w-6 h-6" />
          </button>
          <button class="text-slate-400 hover:text-primary transition-colors">
            <Share2 className="w-6 h-6" />
          </button>
        </div>
      </div>

      <h1 class="text-3xl md:text-4xl font-black text-primary mb-4 leading-tight">
        {product.name}
      </h1>

      <p class="text-2xl font-bold text-secondary mb-6">
        {formatPrice(product.price)}
      </p>

      <div class="prose prose-slate mb-8">
        <p class="text-slate-600 leading-relaxed">
          {product.description}
        </p>
      </div>

      <SizeSelector sizes={product.sizes} client:load />

      <div class="mt-auto pt-8 border-t border-slate-200">
        <AddToCartButton product={product} client:load />

        <p class="text-[10px] text-center text-slate-400 mt-4 uppercase tracking-widest font-bold">
          üöö Env√≠o gratis en pedidos superiores a $ 150.000
        </p>
      </div>

      <div class="mt-8 grid grid-cols-2 gap-4">
        <div class="bg-slate-50 p-4 rounded-xl border border-slate-100">
          <p class="text-xs font-bold text-primary mb-1 uppercase">Material</p>
          <p class="text-sm text-slate-500">100% Algod√≥n Peinado</p>
        </div>
        <div class="bg-slate-50 p-4 rounded-xl border border-slate-100">
          <p class="text-xs font-bold text-primary mb-1 uppercase">Impresi√≥n</p>
          <p class="text-sm text-slate-500">DTF de alta resoluci√≥n</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { setSelectedSize } from '../../lib/productStore';
  // Reset selected size when entering a product page
  setSelectedSize(null);
</script>
