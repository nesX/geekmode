---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/shop/ProductCard.astro';
import { fetchHomeData } from '../lib/api';

const { newest, categories } = await fetchHomeData();

const mapProduct = (p, categoryName = 'Geek') => ({
  id: p.id,
  slug: p.slug,
  name: p.name,
  price: Number(p.base_price),
  description: p.description,
  image_filename: p.image_filename,
  category: categoryName,
});

const newestProducts = newest.map((p) => mapProduct(p));
---

<Layout title="Inicio">
  <!-- Hero Section -->
  <section class="bg-surface rounded-3xl overflow-hidden mb-12 text-text-main border border-white/5 shadow-2xl relative">
    <div class="absolute top-0 right-0 w-1/2 h-full bg-primary/5 blur-[120px] -z-10"></div>
    <div class="grid md:grid-cols-2 items-center">
      <div class="p-8 md:p-16 relative z-10">
        <h1 class="text-4xl md:text-6xl font-black mb-6 leading-tight">
          Estilo <span class="text-primary italic">Geek</span> para Devs
        </h1>
        <p class="text-lg text-text-muted mb-8 max-w-md">
          Prendas dise침adas por desarrolladores para desarrolladores. Calidad premium y dise침os que hablan tu lenguaje.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="#productos" class="bg-primary hover:opacity-90 text-white font-bold py-3 px-8 rounded-lg transition-all shadow-[0_0_20px_rgba(139,92,246,0.4)]">
            Ver Colecci칩n
          </a>
          <div class="flex -space-x-2">
            {[1, 2, 3, 4].map((i) => (
              <div class="w-10 h-10 rounded-full border-2 border-surface bg-background flex items-center justify-center text-[10px] font-bold text-primary">
                {String.fromCharCode(64 + i)}
              </div>
            ))}
            <div class="pl-4 flex items-center text-sm text-text-muted">
              +500 Devs ya las usan
            </div>
          </div>
        </div>
      </div>
      <div class="hidden md:block bg-background/50 h-full min-h-[400px] relative overflow-hidden border-l border-white/5">
        <!-- Decoraci칩n abstracta -->
        <div class="absolute inset-0 opacity-10 font-mono text-[10px] p-4 overflow-hidden pointer-events-none text-primary">
          {Array(20).fill(0).map(() => (
            <div class="whitespace-nowrap">
              {`const product = { name: "Geek Shirt", price: "55k", quality: "max" };`.repeat(5)}
            </div>
          ))}
        </div>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-64 h-64 bg-primary/20 rounded-full blur-3xl animate-pulse"></div>
        </div>
        <div class="absolute bottom-8 right-8 bg-surface/80 backdrop-blur-md p-4 rounded-xl border border-white/10 shadow-xl">
          <pre class="text-xs text-secondary font-mono"><code>{`{
  "status": "ready",
  "style": "cyberpunk",
  "coffee": true
}`}</code></pre>
        </div>
      </div>
    </div>
  </section>

  <!-- Nuevos Lanzamientos -->
  <section id="productos">
    <div class="flex items-end justify-between mb-8">
      <div>
        <h2 class="text-3xl font-bold text-text-main">Nuevos <span class="text-primary">Lanzamientos</span></h2>
        <p class="text-text-muted mt-2 font-medium">Explora lo 칰ltimo en estilo developer.</p>
      </div>
      <a href="/productos" class="text-secondary font-semibold hover:text-primary transition-colors">Ver todos</a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {newestProducts.map((product, i) => (
        <ProductCard product={product} priority={i < 4} />
      ))}
    </div>
  </section>

  <!-- Secciones por Categor칤a -->
  {categories.map((cat) => (
    <section class="mt-16">
      <div class="flex items-center gap-8 mb-2">
        <div class="flex-1 h-px bg-white/20"></div>
        <h2 class="text-2xl font-bold text-text-main shrink-0">{cat.name}</h2>
        <div class="flex-1 h-px bg-white/20"></div>
      </div>
      <div class="text-center mb-8">
        <a href={`/camisetas/${cat.slug}`} class="text-secondary font-semibold hover:text-primary transition-colors">Ver todos</a>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {cat.products.map((p) => (
          <ProductCard product={mapProduct(p, cat.name)} priority={false} />
        ))}
      </div>
    </section>
  ))}

  <!-- Features -->
  <section class="mt-20 py-16 border-y border-white/5 grid md:grid-cols-3 gap-12 bg-surface/30 rounded-3xl px-8">
    <div class="flex flex-col items-center text-center group">
      <div class="w-16 h-16 bg-primary/10 text-primary rounded-2xl flex items-center justify-center mb-6 text-2xl group-hover:scale-110 transition-transform shadow-[0_0_15px_rgba(139,92,246,0.1)]">
        游뚴
      </div>
      <h3 class="font-bold text-xl mb-3 text-text-main">Env칤os a toda Colombia</h3>
      <p class="text-sm text-text-muted leading-relaxed">Recibe tus productos en la puerta de tu casa u oficina con seguimiento en tiempo real.</p>
    </div>
    <div class="flex flex-col items-center text-center group">
      <div class="w-16 h-16 bg-secondary/10 text-secondary rounded-2xl flex items-center justify-center mb-6 text-2xl group-hover:scale-110 transition-transform shadow-[0_0_15px_rgba(59,130,246,0.1)]">
        游눱
      </div>
      <h3 class="font-bold text-xl mb-3 text-text-main">Pago Seguro</h3>
      <p class="text-sm text-text-muted leading-relaxed">M칰ltiples medios de pago a trav칠s de WhatsApp o transferencia con total seguridad.</p>
    </div>
    <div class="flex flex-col items-center text-center group">
      <div class="w-16 h-16 bg-accent/10 text-accent rounded-2xl flex items-center justify-center mb-6 text-2xl group-hover:scale-110 transition-transform shadow-[0_0_15px_rgba(20,184,166,0.1)]">
        游빘
      </div>
      <h3 class="font-bold text-xl mb-3 text-text-main">Calidad Premium</h3>
      <p class="text-sm text-text-muted leading-relaxed">Algod칩n 100% y estampados de alta durabilidad que resisten todos tus deploys.</p>
    </div>
  </section>
</Layout>
