# Server Configuration
NODE_ENV=development
PORT=3000
CLIENT_ORIGIN=http://localhost:4321

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=8h

# Google OAuth Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Admin Authorization
# Comma-separated list of authorized admin emails
ADMIN_EMAILS=admin@example.com,otro-admin@example.com

# PostgreSQL Database Configuration (optional)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=geekshop
# DB_USER=postgres
# DB_PASS=your_password

LOG_PATH=logs

IMAGE_STORAGE=local
MEDIA_PATH=uploads/products # Carpeta donde se almacenaran las imagenes
MEDIA_URL_PREFIX=/media/products # Url publica para acceder a las imagenes y esconder la ruta real
MAX_IMAGES_PER_PRODUCT=8

# Email configuration
EMAIL_PROVIDER=console
EMAIL_FROM=GeekShop <noreply@geekmode.co>

# SMTP (desarrollo local con Mailpit)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# Resend (producci√≥n - futuro)
RESEND_API_KEY=

# SendGrid (alternativa - futuro)
SENDGRID_API_KEY=

# Frontend URL (para links en emails)
FRONTEND_URL=http://localhost:4321